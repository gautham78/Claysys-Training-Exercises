@model MVCProject.Models.Register

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="~/Content/signup.css">
</head>
<body>
    <div class="container">
        <h2>Signup</h2>
        @using (Html.BeginForm("Signup", "Account", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.regname, "Username")
                @Html.TextBoxFor(m => m.regname, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.regname)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.email, "Email")
                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.email)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.password, "Password")
                @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.password)
            </div>
            <button type="submit" class="btn">Signup</button>
        }

        <div class="link-container">
     
            @Html.ActionLink("View/Edit/Delete Data", "UserList", "Account", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</body>
</html>
